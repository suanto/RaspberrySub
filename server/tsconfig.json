{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "target": "es2017",

        "allowSyntheticDefaultImports": true,           

        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "typeRoots" : ["./node_modules/@types"],

        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "exclude": [ 
        "node_modules",
        "**/*.spec.ts"
      ]
}